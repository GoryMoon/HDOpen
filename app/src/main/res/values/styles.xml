<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorCerise</item>
        <item name="colorSecondaryVariant">@color/colorCeriseDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">@color/colorCerise</item>
        <item name="colorOnError">@color/white</item>
        <item name="actionBarTheme">@style/ThemeOverlay.ActionBar</item>
    </style>

    <style name="ThemeOverlay.ActionBar" parent="">
        <item name="colorSurface">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorCerise</item>
        <item name="colorSecondaryVariant">@color/colorCeriseDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">@color/colorCerise</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="CustomTooltip" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_textStyle">@style/CustomTooltipText</item>
    </style>
    <style name="CustomTooltipText" parent="ToolTipTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
